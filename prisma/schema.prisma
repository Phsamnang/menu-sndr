generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  displayName String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  menuItems   MenuItem[]

  @@index([name])
}

model TableType {
  id          String    @id @default(cuid())
  name        String    @unique
  displayName String
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  prices      Price[]
  tables      Table[]

  @@index([name])
  @@index([order])
}

model Table {
  id          String    @id @default(cuid())
  number      String    @unique
  name        String?
  capacity    Int       @default(4)
  tableTypeId String
  tableType   TableType @relation(fields: [tableTypeId], references: [id], onDelete: Restrict)
  status      String    @default("available") // available, occupied, reserved, maintenance
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orders      Order[]

  @@index([tableTypeId])
  @@index([number])
  @@index([status])
}

model MenuItem {
  id          String      @id @default(cuid())
  name        String
  description String
  image       String
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  isCook      Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  prices      Price[]
  orderItems  OrderItem[]

  @@index([categoryId])
}

model Price {
  id          String    @id @default(cuid())
  menuItemId  String
  tableTypeId String
  amount      Float
  menuItem    MenuItem  @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  tableType   TableType @relation(fields: [tableTypeId], references: [id], onDelete: Restrict)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([menuItemId, tableTypeId])
  @@index([menuItemId])
  @@index([tableTypeId])
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique
  tableId       String?
  table         Table?      @relation(fields: [tableId], references: [id], onDelete: SetNull)
  customerName  String?
  status        String      @default("new") // new, on_process, done, cancelled
  discountType  String?     // percentage, amount
  discountValue Float?       @default(0)
  subtotal      Float       @default(0)
  discountAmount Float      @default(0)
  total         Float       @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         OrderItem[]

  @@index([orderNumber])
  @@index([tableId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId  String
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Restrict)
  quantity    Int      @default(1)
  unitPrice   Float
  totalPrice  Float
  status      String   @default("pending") // pending, preparing, ready, served, cancelled
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([orderId])
  @@index([menuItemId])
  @@index([status])
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  displayName String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  adminMenuItems AdminMenuItemRole[]

  @@index([name])
}

model User {
  id          String   @id @default(cuid())
  username    String   @unique
  password    String
  roleId      String
  role        Role     @relation(fields: [roleId], references: [id], onDelete: Restrict)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([username])
  @@index([roleId])
}

model AdminMenuItem {
  id          String   @id @default(cuid())
  href        String   @unique
  iconName    String
  title       String
  description String
  iconColor   String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roles       AdminMenuItemRole[]

  @@index([href])
  @@index([order])
}

model AdminMenuItemRole {
  id             String        @id @default(cuid())
  adminMenuItemId String
  roleId         String
  adminMenuItem  AdminMenuItem @relation(fields: [adminMenuItemId], references: [id], onDelete: Cascade)
  role           Role          @relation(fields: [roleId], references: [id], onDelete: Cascade)
  createdAt      DateTime      @default(now())

  @@unique([adminMenuItemId, roleId])
  @@index([adminMenuItemId])
  @@index([roleId])
}

model ShopInfo {
  id          String   @id @default(cuid())
  name        String
  address     String?
  phone       String?
  email       String?
  logo        String?
  taxId       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Expense {
  id            String        @id @default(cuid())
  title         String
  description   String?
  amount        Float         @default(0) // Deprecated: Use amountUSD and amountKHR instead
  amountUSD     Float         @default(0) // Total amount in USD (from USD items only)
  amountKHR     Float         @default(0) // Total amount in KHR (KHR items + USD items converted to KHR)
  category      String
  date          DateTime      @default(now())
  receiptNumber String?
  vendor        String?
  paymentMethod String?
  receiptImage  String?
  notes         String?
  currency      String        @default("USD") // Deprecated: Items can have different currencies
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  items         ExpenseItem[]

  @@index([category])
  @@index([date])
  @@index([vendor])
  @@index([currency])
}

model Unit {
  id          String        @id @default(cuid())
  name        String        @unique
  displayName String
  symbol      String?       // kg, g, L, ml, pcs, etc.
  order       Int           @default(0)
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  products    Product[]
  expenseItems ExpenseItem[]

  @@index([name])
  @@index([order])
  @@index([isActive])
}

model Product {
  id          String        @id @default(cuid())
  name        String        @unique
  description String?
  unitId      String?
  unit        Unit?         @relation(fields: [unitId], references: [id], onDelete: SetNull)
  category    String?       // ស្រា, ម្ហូប, ផ្លែឈើ, etc.
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  expenseItems ExpenseItem[]

  @@index([name])
  @@index([category])
  @@index([isActive])
  @@index([unitId])
}

model ExpenseItem {
  id           String   @id @default(cuid())
  expenseId    String
  expense      Expense  @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  productId    String?
  product      Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  productName  String
  quantity     Float    @default(1)
  unitId       String?
  unit         Unit?    @relation(fields: [unitId], references: [id], onDelete: SetNull)
  unitPrice    Float
  totalPrice   Float
  currency     String   @default("USD") // USD or KHR (Riels)
  paymentStatus String  @default("UNPAID") // PAID or UNPAID
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([expenseId])
  @@index([productId])
  @@index([unitId])
  @@index([currency])
  @@index([paymentStatus])
}